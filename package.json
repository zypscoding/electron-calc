{
  "name": "electron-calc",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "packagewin": "electron-packager ./ zp --platform=win32 --out=./dist --arch=x64 --app-version=1.0.0 --icon=./images/icon.ico --overwrite",
    "buildmac": "electron-builder --platform=mac --arch=x64",
    "buildwin": "electron-builder --win --x64"
  },
  "build": {
    "productName": "计算器",
    "appId": "com.zp.app",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "icon": "./images/mac.icns",
      "window": {
        "x": "200",
        "y": "150",
        "width": 500,
        "height": 400
      }
    },
    "mac": {
      "icon": "./images/mac.icns"
    },
    "win": {
      "icon": "./images/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./images/icon.ico",
      "uninstallerIcon": "./images/icon.ico",
      "installerHeaderIcon": "./images/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "zp计算器"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "mathjs": "^5.2.3"
  },
  "devDependencies": {
    "electron": "^3.0.7",
    "electron-packager": "^12.2.0"
  }
}
